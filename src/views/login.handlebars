<div class="container-fluid">
    <div class="mt-5 border border-dark rounded m-auto" style="min-width: 280px; max-width: 350px;">
        <h4 class="text-center bg-info border-bottom border-dark rounded-top"><b>LOGIN</b></h4>
        <div class="container py-0">
            <form method='POST' action="/" autocomplete="off">
                <div class="mt-3">
                    <label for="email" class="form-label h5">E-mail</label>
                    <input type="email" class="form-control py-1" id="email" name="email" required="true" autofocus="true">
                </div>
                <div class="mt-3">
                    <label for="senha" class="form-label h5">Senha</label>
                    <input type="password" class="form-control py-1" id="senha" name="senha" required="true">
                </div>
                {{#if erros}}
                    {{#each erros}}
                        <div class="container" style="color: red;">{{texto}}</div>
                    {{/each}}
                {{/if}}
                <div class="row align-items-center my-2">
                    <div class="col">
                        <button type="submit" class="btn btn-info mt-1 col-12 py-1">
                            <spanclass="h5">Entrar</span></button>
                    </div>
                </div>
