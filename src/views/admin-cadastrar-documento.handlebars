<div class="container-fluid">
    <div class="container px-0 mt-3" style="min-width: 280px; max-width: 600px">
        <button type="button" class="btn btn-info border border-dark" style="width: 140px;" onclick="window.location.href = '/admin/listar-documentos'">
            <span class="h6">Voltar</span>
        </button>
    </div>
    <div class="mt-3 border border-dark rounded m-auto" style="min-width: 280px; max-width: 600px">
        <h5 class="text-center bg-info border-bottom border-dark rounded-top"><b>NOVO DOCUMENTO</b></h5>
        <div class="container py-0">
            <form method='POST' action="/admin/cadastrar-documento" enctype="multipart/form-data" autocomplete="off">
                <div class="row mt-1">
                    <div class="col mt-0">
                        <label for="nome" class="form-label h6">Descrição</label>
                        <input type="text" class="form-control py-1 border-dark" name="descricao" id="input-descricao" required="true" autofocus="true">
                    </div>
                </div>
                <div class="row mt-1">
                    <div class="col mt-3">
                        {{!-- <label for="nome" class="form-label h6">Selecione o arquivo</label> --}}
                        <input type="file" class="form-control py-1 border-dark" name="file" id="input-arquivo" required="true">
                    </div>
                </div>
                <div class="row mt-1">
                    <div class="col mt-0">
                        <label for="nome" class="form-label h6">Status</label>
                        <select class="form-select py-1 border-dark" name="status" id="select-status" required="true">
                            <option value="Disponível para download" selected="true">Disponível para download</option>
                            <option value="Não disponível para download">Não disponível para download</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <button type="submit" class="btn btn-info mt-3 mb-3 py-1 col-12">
                            <span class="h5">Cadastrar</span>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
