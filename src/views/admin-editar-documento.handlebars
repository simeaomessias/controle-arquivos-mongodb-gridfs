<div class="container-fluid">
    <div class="container px-0 mt-3" style="min-width: 280px; max-width: 600px">
        <button type="button" class="btn btn-info border border-dark" style="width: 140px;" onclick="window.location.href = '/admin/listar-documentos'">
            <span class="h6">Voltar</span>
        </button>
    </div>
    <div class="mt-3 border border-dark rounded m-auto" style="min-width: 280px; max-width: 600px">
        <h5 class="text-center bg-info border-bottom border-dark rounded-top"><b>INFORMAÇÕES DO DOCUMENTO</b></h5>
        <div class="container py-0">
            <form method='POST' action="/admin/editar-documento/{{documento._id}}" autocomplete="off">
                <div class="row mt-1">
                    <div class="col mt-0">
                        <label for="nome" class="form-label h6">Descrição</label>
                        <input type="text" class="form-control py-1 border-dark" name="descricao" id="input-descricao" required="true" autofocus="true" value="{{documento.descricao}}">
                    </div>
                </div>
                <div class="row mt-1">
                    <div class="col mt-0">
                        <label for="nome" class="form-label h6">Arquivo</label>
                        <input type="text" class="form-control py-1 border-dark" name="descricao" id="input-descricao" required="true" disabled autofocus="true" value="{{documento.nome}}">
                    </div>
                </div>
                <div class="row mt-1">
                    <div class="col mt-0">
                        <label for="nome" class="form-label h6">Status</label>
                        <select class="form-select py-1 border-dark" name="status" id="select-status" required="true">
                            <option value="Disponível para download" selected="true">Disponível para download</option>
                            <option value="Não disponível para download">Não disponível para download</option>
                        </select>
                    </div>
                </div>
                <script>
                    document.getElementById('select-status').value = "{{documento.status}}"
                </script>
                <div class="row mt-1">
                    <a href="" data-bs-toggle="modal" data-bs-target="#modalListaDownloads">Usuários que fizeram download</a>
                </div>
                <div class="row mt-2">
                    <div class="col">
                        <button type="button" class="btn disabled btn-info mt-1 mb-3 py-1 col-12">
                            <spanclass="h5">Excluir</span>
                        </button>
                    </div>
                    <div class="col">
                        <button type="submit" class="btn btn-info mt-1 mb-3 py-1 col-12">
                            <spanclass="h5">Salvar</span>
                        </button>
                    </div>
            </form>
        </div>
    </div>
</div>

{{!-- Modal para exibir lista de usuários que fizeram download do arquivo --}}

<!-- Modal -->
<div class="modal fade" id="modalListaDownloads" tabindex="-1" aria-labelledby="" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content border-bottom border-dark rounded-top">
      <div class="modal-header bg-info py-1 border-bottom border-dark">
        <h6 class="modal-title" id="exampleModalLabel"><b>{{documento.nome}}</b></h6>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body py-0">
        {{#if listaDownloads}}
            {{#each listaDownloads}}
                <b>{{txtNome}}</b>
                <div>{{txtEmail}}</div>
            {{/each}}
        {{/if}}
      </div>
      <div class="modal-footer">
        {{!-- <button type="button" class="btn btn-info" data-bs-dismiss="modal">Fechar</button> --}}
        {{!-- <button type="button" class="btn btn-primary">Save changes</button> --}}
      </div>
    </div>
  </div>
</div>

<script src="/global.js"></script>