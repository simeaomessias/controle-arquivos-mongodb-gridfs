<div class="container-fluid">
    <div class="container px-0 mt-3" style="min-width: 280px; max-width: 600px">
        <button type="button" class="btn btn-info border border-dark" style="width: 140px;" onclick="window.location.href = '/admin/listar-usuarios'">
            <span class="h6">Voltar</span>
        </button>
    </div>
    <div class="mt-3 border border-dark rounded m-auto" style="min-width: 280px; max-width: 600px">
        <h5 class="text-center bg-info border-bottom border-dark rounded-top"><b>NOVO USUÁRIO</b></h5>
        <div class="container py-0">
            <form method='POST' action="/admin/cadastrar-usuario" autocomplete="off">
                <div class="row mt-1">
                    <div class="col mt-0">
                        <label for="nome" class="form-label h6">Nome</label>
                        <input type="text" class="form-control py-1 border-dark" name="nome" id="input-nome" required="true" autofocus="true">
                    </div>
                </div>
                <div class="row mt-1">
                    <div class="col mt-0">
                        <label for="nome" class="form-label h6">E-mail</label>
                        <input type="email" class="form-control py-1 border-dark" name="email" id="input-email" required="true">
                    </div>
                </div>
                <div class="row mt-1">
                    <div class="col mt-0">
                        <label for="nome" class="form-label h6">Status</label>
                        <select class="form-select py-1 border-dark" name="status" id="select-status" required="true">
                            <option value="Ativo" selected="true">Ativo</option>
                            <option value="Inativo">Inativo</option>
                        </select>
                    </div>
                </div>
                <div class="row mt-1">
                    <span class="py-1" style="color: red; font-weight: bold;">A senha inicial do usuário será @123</span>
                </div>
                <div class="row">
                    <div class="col">
                        <button type="submit" class="btn btn-info mt-1 mb-3 py-1 col-12"> <span
                                class="h5">Cadastrar</span></button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="/global.js"></script>